# PiCast Configuration
# Copy this to ~/.config/picast/picast.toml or ./picast.toml

[server]
host = "0.0.0.0"
port = 5000
mpv_socket = "/tmp/mpv-socket"
# data_dir = "/home/pi/.picast"
# ytdl_format = "bestvideo[height<=720][fps<=30][vcodec^=avc]+bestaudio/best[height<=720]"
# ytdl_format_live = "bestvideo[height<=480][vcodec^=avc]+bestaudio/best[height<=480]"

# Telegram bot for remote control
# Get a token from @BotFather on Telegram
# [telegram]
# bot_token = "123456:ABC-DEF..."
# allowed_users = [123456789]  # Your Telegram user ID (empty = allow all)
# enabled = true

# Pushover push notifications (iOS + Android)
# Create app at https://pushover.net/apps/build
# [pushover]
# enabled = true
# api_token = "your-app-api-token"
# user_key = "your-user-key"
# daily_summary_hour = 8

# Device registry for multi-Pi support
# Devices appear in TUI (Tab key) and Web UI device selector
# mDNS auto-discovery also finds other PiCast instances on your network
[devices.living-room]
host = "picast-living.local"
port = 5000
default = true

# [devices.bedroom]
# host = "picast-bedroom.local"
# port = 5000

# AutoPlay pool mode with YouTube discovery
# [autoplay]
# enabled = true
# pool_mode = true
# avoid_recent = 3
# discovery_delay = 5.0  # seconds between yt-dlp searches

# Per-block search themes for the discovery agent
# Run: picast-pool discover [block]
# [autoplay.themes.focus]
# queries = ["lofi beats study", "focus music ambient"]
# min_duration = 1800   # 30 minutes minimum
# max_duration = 14400  # 4 hours maximum
# max_results = 5       # per query

# [autoplay.themes.clean-mama]
# queries = ["cleaning motivation music", "upbeat cleaning playlist"]
# min_duration = 600
# max_results = 3
