# PiCast Configuration
# Copy this to ~/.config/picast/picast.toml or ./picast.toml

[server]
host = "0.0.0.0"
port = 5000
mpv_socket = "/tmp/mpv-socket"
# data_dir = "/home/pi/.picast"
# ytdl_format = "bestvideo[height<=720][fps<=30][vcodec^=avc]+bestaudio/best[height<=720]"
# ytdl_format_live = "bestvideo[height<=480][vcodec^=avc]+bestaudio/best[height<=480]"

# Telegram bot for remote control
# Get a token from @BotFather on Telegram
# [telegram]
# bot_token = "123456:ABC-DEF..."
# allowed_users = [123456789]  # Your Telegram user ID (empty = allow all)
# enabled = true

# ntfy.sh push notifications (replaces Telegram)
# Self-hosted ntfy server on PiPulse Pi
# [ntfy]
# enabled = true
# server_url = "http://10.0.0.103:5555"
# alert_topic = "picast-alerts"
# summary_topic = "picast-health"
# daily_summary_hour = 8

# Device registry for multi-Pi support
# Devices appear in TUI (Tab key) and Web UI device selector
# mDNS auto-discovery also finds other PiCast instances on your network
[devices.living-room]
host = "picast-living.local"
port = 5000
default = true

# [devices.bedroom]
# host = "picast-bedroom.local"
# port = 5000
